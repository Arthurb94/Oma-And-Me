# Utiliser une image de base compatible AWS Lambda
FROM public.ecr.aws/lambda/python:3.10

# Installer Miniconda
ENV PATH /opt/conda/bin:$PATH
RUN curl -sSLo ~/miniconda.sh https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh \
    && chmod +x ~/miniconda.sh \
    && ~/miniconda.sh -b -p /opt/conda \
    && rm ~/miniconda.sh

# Créer un environnement conda et installer les dépendances
COPY environment.yml .
RUN conda env create -f environment.yml \
    && conda clean -a

# Activer l'environnement conda
ENV PATH /opt/conda/envs/myenv/bin:$PATH

# Copier le code source
COPY . .

# Command to run the Lambda function handler
CMD ["lambda_function.lambda_handler"]